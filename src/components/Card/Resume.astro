---
import  CardLayout from '../../layouts/CardLayout.astro';
import ButtonLayout from '../../layouts/ButtonLayout.astro';
import CV from '../../../public/assets/CV_2024-08-06_Vincent_Goyet.pdf'
import SVGAway from '../SVGAway/SVGAway.astro';

interface Props {
    title: string;
    body?  : string;
    class?: string;

}
const { title, class: className } = Astro.props;

---
<CardLayout title={title} colSpan='lg:col-span-1' rowSpan='lg:row-span-1' class = {className}>
<div class="w-full h-full flex justify-center items-center">
    <a href={CV} target="_blank">      
        <ButtonLayout py="py-2" px="px-4">
            Download my resume
        </ButtonLayout>
    </a>
</div>
        <div class="size-8  absolute top-2 right-2">
            <SVGAway />
        </div>

</CardLayout>